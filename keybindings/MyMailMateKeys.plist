// Modifiers must be writte in this order: #^~$@
{
        "^<"    = ("collapseAll:", "selectLastMessageRow:");
        "^>"    = ("expandAll:", "selectLastMessageRow:");
        "^@,"   = "selectFirstMessageRow:";
        "^@."   = "selectLastMessageRow:";
        "^@l"   = ("makeFirstResponder:", "mainOutline");
        "@X"    = "deleteMessage:";
        "@>"    = "expandThread:";
        "@<"    = "collapseThread:";
        "~<"    = ("moveToBeginningOfDocument:");
        "~>"    = ("moveToEndOfDocument:");
        "~@f"   = "mailboxSearch:";
        "n"     = "nextMessage:";
        "p"     = "previousMessage:";
}
